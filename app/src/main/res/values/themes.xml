<resources>
    <!-- Base application theme. -->
    <style name="Theme.MovieApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="MovieName">
        <item name="android:layout_marginStart">@dimen/dp8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MovieName.Rating">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:layout_marginTop">@dimen/dp4</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="MovieDescription">
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
        <item name="android:layout_marginBottom">@dimen/dp8</item>
        <item name="android:ellipsize">end</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="maxLines">5</item>
        <item name="android:layout_margin">@dimen/dp4</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
</resources>